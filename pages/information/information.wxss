/* pages/infomation/infomation.wxss */

/* 背景色 */
page{
        background-color: #f5f5f5;
        height: 100%;
        font-family: "华康手札体W5P";
}

/* 上面黄色部分总体 */
.above_background{
        width: 100%;
        height: 400rpx;  /* 30%屏幕宽 */
        margin: 0px;
        background-color: #e9d31e;
}

/* 顶部文字和两个图标*/
.above_top{
        display: flex;
        justify-content: space-between;
}

/* 消息，分组 */
.message_type{
        display: flex;
        width: 30%;
        justify-content: space-between;
        align-items: center;
        margin-left: 40rpx;
        margin-right: 30rpx;
}

/* 被选中文字 */
.text_choose{
        font-size: 55rpx;
        font-weight: bolder;
}

/* 未被选中文字 */
.text_unchoose{
        font-size: 45rpx;
        font-weight: bold;
}

/* 图标布局 */
.icon_type{
        display: flex;
        width: 35%;
        justify-content: space-between;
        align-items: center;
        margin-left: 10rpx;
        margin-right: 40rpx;
}

/* 顶部图标 */
.top_icon{
        width: 100rpx;
        height: 100rpx;
}


/* 中间白色方框 */
.above_center{
        margin-top: 80rpx;
        margin-left: 60rpx;
        margin-right: 60rpx;
        width: 630rpx;
        height: 270rpx;
        background-color: #ffffff; 
        box-shadow: 5px 5px 5px grey; 
        display: flex;
        justify-content: space-around;
}

/* 聊天框分组 */
.info_group{
        display: flex;
        flex-direction: column;
        margin-top: 30rpx;
        justify-content: start;
        align-items: center;
        font-size: 45rpx;
        font-weight: bold;
}

/* 聊天框图片 */
.chat_icon{
        width: 130rpx;
        height: 130rpx;
}

/* 下半部分 */
.below_background{
        width: 100%;
        margin-top: 100rpx;
}

.hr{
        width: 100%;
        height: 20rpx;
        background:-webkit-linear-gradient(top,#d8d6d6,#e9e6e6,#d8d6d6);
}

/* 消息卡片 */
.info_card{
        padding-top:30rpx;
        padding-bottom: 30rpx;
        padding-left: 30rpx;
        display: flex;
        justify-content: space-between;
        margin-left: 20rpx;
        margin-right: 20rpx;
}

/* 头像 */
.head_image{
        width: 180rpx;
        height: 180rpx;
        border-radius: 50%;
        background-color: purple;
}

/* 昵称和消息内容 */
.info_concret{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 40%;
}

.nickname{
        font-size: 50rpx; 
        font-weight: bolder;
}

.detail{
        font-size: 35rpx;
        margin-top: 20rpx;
}

/* 日期 */
.info_right{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-end;
}

.date{
        font-size: 40rpx;
        font-weight: bold;
}

.info_icon{
        width: 70rpx;
        height: 70rpx;
        border-radius: 50%;
        background-color: rgba(255, 0, 0, 0.596);
        display: flex;
        justify-content: center;
        align-items: center;
        color: #ffffff;
}
