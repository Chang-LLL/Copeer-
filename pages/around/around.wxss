/* pages/around/around.wxss */

/* 背景色 */
page{
        background-color: #f5f5f5;
        height: 100%;
}

/* 上面黄色部分总体 */
.above_background{
        width: 100%;
        height: 400rpx;  /* 30%屏幕宽 */
        margin: 0px;
        background-color: #f7d203;
}

/* 顶部文字和两个图标*/
.above_top{
        display: flex;
        justify-content: space-between;
}

/* 消息，分组 */
.message_type{
        display: flex;
        width: 30%;
        justify-content: space-between;
        align-items: center;
        margin-left: 40rpx;
        margin-right: 30rpx;
}

/* 被选中文字 */
.text_choose{
        font-size: 50rpx;
        font-weight: bolder;
}

/* 未被选中文字 */
.text_unchoose{
        font-size: 40rpx;
}