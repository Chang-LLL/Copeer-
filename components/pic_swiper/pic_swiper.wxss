/* components/swiper/swiper.wxss */
.idx-content {
        overflow: hidden;
        padding: 0 40rpx;
}
.idx-content .idx-swiper {
        position: relative;
        margin: 40rpx 0;
        padding-bottom: 100%;
}
.idx-content .idx-swiper .idx-cswp {
        width: 80%;
        height: 400rpx;
        margin-top: -20rpx;
        position: absolute;
        top: 0;
        border-radius: 6px;
}
.idx-content .idx-swiper .idx-cswp image {
        width: 100%;
        max-height: 400rpx;
        border-radius: 10px;
}

.swp-left {/*左边样式*/
        transition: all .3s ease;
        transform: scale(0.8);
        left: -69%;
}

.swp-center {/*中间样式*/
        left: 10%;
        transition: all .3s ease;
        transform: scale(1);
}
.swp-right {/*右边样式*/
        transition: all .3s ease;
        transform: scale(0.8);
        left: 88%;
}
.swp-rightNo {/*最右边样式*/
        transition: all .3s ease;
        left: 150%;
}
.swp-leftNo {/*最左边样式*/
        transition: all .3s ease;
        left: -150%;
}